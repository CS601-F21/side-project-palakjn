<%- include("partials/dashboard-header"); -%>

        <section id="changepassword">
            <div class="container-fluid">
                <form action="/changepassword" method="post">
                    <div class="card">
                        <div class="card-header">
                            <h3>Change Password</h3>
                        </div>
    
                        <div class="card-body form-control">
                            <% if(error) {%>
                                <span style="color: red;" id="error1"><%= error %></span>
                            <% } %>
                            <div class="row">
                                <div class="col-lg-12" style="margin-bottom: 10px;">
                                    <input type="password" class="password" id="oldpassword" placeholder="Old Password" name="oldpassword" required />
                                </div>
                                <div class="col-lg-12" style="margin-top: 10px;">
                                    <input type="password" class="password" id="newpassword" placeholder="New Password" name="newpassword" required />                                    
                                </div>
                            </div>
                        </div>
    
                        <div class="card-footer">
                            <button type="submit" class="btn btn-dark" id="change-button" style="float: right;">Change</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

        <script>
            $("#change-button").click(function(e) {

                let oldpassword = $("#oldpassword").val();
                let newpassword = $("#newpassword").val();

                if(oldpassword == newpassword) {
                    alert("Old and New password is same.");
                    e.preventDefault();
                } else {
                    $("#change-button").submit();
                }
            });
        </script>
    </body>
</html>